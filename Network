resource "azurerm_network_security_group" "mynewtestRG" {
  name                = "testSecurityGroup1"
  location            = azurerm_resource_group.mynewtestRG.location
  resource_group_name = azurerm_resource_group.mynewtestRG.name
}


resource "azurerm_virtual_network" "mynewtestRG" {
  name                = "virtualNetwork1"
  location            = azurerm_resource_group.mynewtestRG.location
  resource_group_name = azurerm_resource_group.mynewtestRG.name
  address_space       = ["10.0.0.0/16"]
  dns_servers         = ["10.0.0.2", "10.0.0.3"]


  subnet {
    name           = "subnet1"
    address_prefix = "10.0.1.0/24"
  }

  subnet {
    name           = "subnet2"
    address_prefix = "10.0.2.0/24"
  }

  subnet {
    name           = "subnet3"
    address_prefix = "10.0.3.0/24"
    security_group = azurerm_network_security_group.example.id
  }

  tags = {
    environment = "Staging"
  }
}